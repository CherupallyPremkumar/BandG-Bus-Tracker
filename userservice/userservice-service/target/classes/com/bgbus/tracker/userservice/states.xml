<?xml version="1.0" encoding="UTF-8"?>

<states>
	<event-information eventId='assign'
                       meta-bodyType='com.bgbus.tracker.userservice.model.AssignUserservicePayload'
                       meta-acls="test.premium"
    />
	<event-information eventId='resolve'
                       meta-bodyType='org.chenile.workflow.param.MinimalPayload'
                       meta-acls="test.premium"
    />
	<event-information eventId='close'
                       meta-bodyType='org.chenile.workflow.param.MinimalPayload'
                       meta-acls="test.premium"
    />
	<default-transition-action componentName="userserviceBaseTransitionAction"/>
	
	<flow id='test-flow' default='true'>
		<entry-action componentName="userserviceEntryAction"/>
		<exit-action componentName="userserviceExitAction"/>
        <security-strategy componentName="stmSecurityStrategy"/>
		<manual-state id='OPENED' initialState='true'>
			<on eventId='assign'  newStateId='ASSIGNED' componentName='assignUserservice'/>
		</manual-state>

		<manual-state id='ASSIGNED'>
			<on eventId='resolve' newStateId='RESOLVED' componentName='resolveUserservice'/>
		</manual-state>
		<manual-state id='RESOLVED'>
			<on eventId='close' newStateId='CLOSED' componentName='closeUserservice'/>
		</manual-state>
		<manual-state id='CLOSED' />
	</flow>
	
</states>
